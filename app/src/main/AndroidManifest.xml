<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.zhanglemeng.www.f2503">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!--主界面-->
        <activity
            android:name=".base.activities.MainActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!--新增租客-->
        <activity android:name=".tenant.activities.AddTenantActivity"/>

        <!--新增房间-->
        <activity android:name=".room.activities.AddRoomActivity"/>

        <!--租客详情-->
        <activity android:name=".tenant.activities.TenantDetailActivity"/>



    </application>




</manifest>
